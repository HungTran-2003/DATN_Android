<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moive_Ticket_Booking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemRippleColor">@color/nav_ripple</item>
        <item name="itemTextColor">@color/bottom_nav_text_selector</item>
        <item name="itemIconTint">@color/bottom_nav_icon_selector</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/bottom_nav_selected</item>
        <item name="colorOnSurface">@color/bottom_nav_unselected</item>
    </style>


    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <item name="postSplashScreenTheme">@style/Theme.Moive_Ticket_Booking</item>
    </style>

    <!-- DatePicker theme -->
    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#0C1026</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#555555</item>
        <item name="android:headerBackground">#3F51B5</item>
        <item name="android:colorControlNormal">#3F51B5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
    </style>

    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">#3F51B5</item>
        <item name="android:calendarTextColor">#000000</item>
        <item name="android:dayOfWeekBackground">#EEEEEE</item>
        <item name="android:dayOfWeekTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:yearListSelectorColor">#3F51B5</item>
    </style>

    <!-- TimePicker theme -->
    <style name="TimePickerTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#0C1026</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#555555</item>
        <item name="android:headerBackground">#3F51B5</item>
        <item name="android:colorControlNormal">#3F51B5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:timePickerStyle">@style/CustomTimePicker</item>
    </style>

    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">#3F51B5</item>
        <item name="android:numbersTextColor">#000000</item>
        <item name="android:numbersBackgroundColor">#FFFFFF</item>
        <item name="android:numbersSelectorColor">#3F51B5</item>
        <item name="android:amPmTextColor">#000000</item>
    </style>

    <style name="CustomNumberPickerStyle" parent="android:Widget.Material.NumberPicker">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

</resources>